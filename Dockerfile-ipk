FROM itdoginfo/openwrt-sdk-ipk:24.10.3

# Копируем ВСЮ структуру проекта
COPY . /builder/

# Подготавливаем файлы для пакета
RUN mkdir -p /builder/package/parentcontrol/files && \
    cp -r /builder/etc /builder/usr /builder/package/parentcontrol/files/

# Собираем
RUN make defconfig && \
    make package/parentcontrol/compile V=s